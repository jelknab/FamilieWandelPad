<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:FamilieWandelPad.Resx;assembly=FamilieWandelPad"
             x:Class="FamilieWandelPad.Pages.AboutPage"
             BackgroundColor="CornflowerBlue">
    <ContentPage.Content>
        <StackLayout Margin="10"
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <Label Text="{x:Static resources:AppResources.About}"
                   FontSize="Title" 
                   TextColor="White"/>
            <Label Text="{x:Static resources:AppResources.AboutText}"
                   TextColor="White"/>
            <Label Text="{x:Static resources:AppResources.ForQuestions}"
                   TextColor="White"/>
            <Label Text="FWP@metzlar.net"
                   TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>