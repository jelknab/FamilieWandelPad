<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:FamilieWandelPad.Resx;assembly=FamilieWandelPad"
             x:Class="FamilieWandelPad.Pages.OffRoutePage"
             BackgroundColor="CornflowerBlue">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="{x:Static resources:AppResources.OffRouteText}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" 
                   TextColor="White"/>
            <Button Text="{x:Static resources:AppResources.RouteResetButton}" 
                    BackgroundColor="White"
                    TextColor="black"
                    Clicked="RouteReset_OnClicked" />
            <Button x:Name="RouteSkip"
                    Text="{x:Static resources:AppResources.RouteSkipButton}" 
                    BackgroundColor="White"
                    TextColor="black"
                    Clicked="RouteSkip_OnClicked" />
            <Button Text="{x:Static resources:AppResources.IgnoreButton}" 
                    BackgroundColor="White"
                    TextColor="black"
                    Clicked="Ignore_OnClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>